package project1;

import java.util.Scanner;

public class strt {

	public static void main(String[] args) {
		 //factorial in java
		System.out.println(factorial(3));
		
		
	}
	public static int factorial(int n) {
		//recursion-->base cases + general formula of f(x) in function of f(x-1)
		if(n == 0) {
			return 1;
		}
		if(n == 1) {
			return 1;
		}
		else {
			return n*factorial(n-1);
		}
	}
}


